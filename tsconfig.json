{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "types": ["node", "mocha"],
    "pretty": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "react-autosize-textarea": ["types/react-autosize-textarea"],
      "react-flip-move": ["types/react-flip-move"],
      "react-fontawesome": ["types/react-fontawesome"],
      "react-modal": ["types/react-modal/react-modal"],
      "react-timeago": ["types/react-timeago"],
      "react-truncate": ["types/react-truncate"],
      "react-waypoint": ["types/react-waypoint"],
      "redux-form": ["types/redux-form"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "types"
  ]
}
