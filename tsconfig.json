{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "types": ["node", "mocha"],
    "pretty": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "react-fontawesome": ["types/react-fontawesome"],
      "react-gravatar": ["types/react-gravatar"],
      "react-modal": ["types/react-modal/react-modal"],
      "react-textarea-autosize": ["types/react-textarea-autosize/react-textarea-autosize"],
      "react-waypoint": ["types/react-waypoint"],
      "redux-form": ["types/redux-form"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "types"
  ]
}
