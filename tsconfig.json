{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "types": ["node", "mocha"],
    "pretty": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "react-fontawesome": ["types/react-fontawesome.d.ts"],
      "react-gravatar": ["types/react-gravatar.d.ts"],
      "react-redux": ["types/react-redux/index.d.ts"],
      "react-router-redux": ["types/react-router-redux/index.d.ts"],
      "history": ["types/history/index.d.ts"],
      "classnames": ["types/classnames/index.d.ts"] // needed in order to be able to pass null/undefined
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "types"
  ]
}
